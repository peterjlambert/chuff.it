---
layout: layouts/main
htmlClass: post
---
<main role="main" class="mainContent">
  <article role="article" itemscope itemtype="http://schema.org/BlogPosting" class="post">
    <header class="post__header">
      <h1 itemprop="name" class="post__headline">{{ title }}</h1>
      <p class="meta">
        <time datetime="{{ date | toISODate }}" itemprop="datePublished" title="{{ date | toRelativeDate }}" pubdate class="meta__pubDate">{{ date | niceDate }}</time>
        <span class="meta__stats">About {{ content |Â readingTime }} reading time</span>
      </p>
    </header>

    <div class="post__body" itemprop="articleBody">
      {{ content | safe }}
    </div>
  </article>
</main>
